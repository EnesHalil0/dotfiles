keybind = shift+alt+l=resize_split:right,40
keybind = shift+alt+h=resize_split:left,40
keybind = shift+alt+j=resize_split:down,40
keybind = shift+alt+k=resize_split:up,40

keybind = ctrl+enter=unbind

